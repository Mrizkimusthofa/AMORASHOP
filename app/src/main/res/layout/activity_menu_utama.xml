<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/honkai"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#420140"
        android:orientation="vertical">

        <!-- TextView for the title -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extrabold"
                android:padding="16dp"
                android:text="POPULER GAME"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_logout_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- GridLayout for images -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E24AA"
            android:columnCount="3"
            android:rowCount="6">

            <!-- ImageView for each game -->

            <ImageView
                android:id="@+id/mlbb"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game1" />

            <ImageView
                android:id="@+id/ff"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game2" />

            <ImageView
                android:id="@+id/gi"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game3" />

            <ImageView
                android:id="@+id/hok"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game4" />

            <ImageView
                android:id="@+id/pubgm"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game5" />

            <ImageView
                android:id="@+id/valo"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game6" />

            <ImageView
                android:id="@+id/codm"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game7" />

            <ImageView
                android:id="@+id/eafc"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game8" />

            <ImageView
                android:id="@+id/mcgg"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game9" />

            <ImageView
                android:id="@+id/sg"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game10" />

            <ImageView
                android:id="@+id/sos"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game11" />

            <ImageView
                android:id="@+id/lol"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game12" />

            <ImageView
                android:id="@+id/aov"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game13" />

            <ImageView
                android:id="@+id/lolw"
                android:layout_width="127dp"
