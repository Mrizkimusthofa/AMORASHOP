                android:scaleType="centerCrop"
                android:src="@drawable/game16" />

            <ImageView
                android:id="@+id/rm"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game17" />

            <ImageView
                android:id="@+id/zzz"
                android:layout_width="127dp"
                android:layout_height="175dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/game18" />

        </GridLayout>

    </LinearLayout>
</ScrollView>