<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuTopUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Input PlayerID -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D1AFF4"
                    android:text="Masukkan PlayerID"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="376dp"
                        android:layout_height="56dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/playerIdEditText"
                            android:layout_width="189dp"
                            android:layout_height="match_parent"
                            android:hint="Masukkan PlayerID" />

                        <EditText
                            android:id="@+id/ZonaID"
                            android:layout_width="187dp"
                            android:layout_height="match_parent"
                            android:hint="Zona ID" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Your nickname will appear here ðŸ˜"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnCheckUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#8251DB"
                            android:text="Cek Username"
                            android:textColor="#ffffffff" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#D1AFF4"
                    android:text="Pilih Nominal Top Up"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <!-- RecyclerView for Top Up nominal -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewNominal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#D1AFF4"
                    android:text="Pilih Pembayaran"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <!-- Grid for Payment Options -->
                <GridLayout
                    android:id="@+id/paymentGrid"
                    android:layout_width="375dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="8dp"
                    android:columnCount="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#D1AFF4"
                    android:text="Beli!"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="375dp"
                    android:layout_height="60dp"
                    android:hint="Masukkan email" />

                <CheckBox
                    android:id="@+id/promoCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya ingin menerima berita dan promosi" />

                <TextView
                    android:id="@+id/tokensTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FF4081"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/metodePembayaranTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih metode pembayaran"
                    android:textColor="#FF4081"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dariTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dari"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hargaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buyButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#8251DB"
                    android:padding="16dp"
                    android:text="Beli sekarang"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>