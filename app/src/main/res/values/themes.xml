<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AMORASHOP" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AMORASHOP" parent="Base.Theme.AMORASHOP" />
       <!-- Tema Aplikasi Utama Anda -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Atribut tema aplikasi utama Anda -->
    </style>

       <!-- Tema untuk Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Atur latar belakang window splash screen -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>

        <!-- Atur ikon yang akan ditampilkan di tengah splash screen -->
        <!-- Gunakan drawable statis (PNG, Vector Drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="windowSplashScreenAnimationDuration">9000</item>
        <!-- Opsional: Durasi animasi ikon (jika ikonnya adalah AnimatedVectorDrawable) -->

        <!-- Atur tema yang akan diterapkan setelah splash screen selesai -->
        <item name="postSplashScreenTheme">@style/Theme.AMORASHOP</item>
    </style>
</resources>